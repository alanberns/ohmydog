include ../partials/head.pug
div(style="position: relative; min-height: 100vh;")
  div(style="padding-bottom: calc(1.25rem + 0.3125rem * 2 + 1rem)")
    include ../partials/header.pug
    div(class="container-fluid")
      //- aca va la pagina hasta footer. inicia con 1 tab
      h1= message
    
      br
      br
    
      include ../partials/info.pug

      div(class="")
        form(method="post" action="/reencuentros/nuevo" id="formulario", class="flex-form-wrap")
          div(class="left-input input mb-3 flex-form-item")
            select(name="tipo" required value=publicacion.tipo?publicacion.tipo:"" onclick="if(this.opened){this.opened=false;this.blur();}else{this.opened=true;}" onblur="this.opened=false;" onchange="this.setAttribute('value', this.value);")
                option(value hidden selected=publicacion.tipo?null:"" disabled)
                option(value="Buscado" selected=publicacion.tipo=="Buscado"?"":null) Busco a un perro perdido
                option(value="Encontrado" selected=publicacion.tipo=="Encontrado"?"":null) Encontré a un perro perdido
            div(class="input_border_focus")
            div(class="input_placeholder") Tipo de publicación de busqueda *
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="zona" required value=publicacion.zona?publicacion.zona:"" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Zona *
          div(class="left-input input mb-3 flex-form-item")
            select(name="sexo" required value=publicacion.sexo?publicacion.sexo:"" onclick="if(this.opened){this.opened=false;this.blur();}else{this.opened=true;}" onblur="this.opened=false;" onchange="this.setAttribute('value', this.value);")
                option(value hidden selected=publicacion.sexo?null:"" disabled)
                option(value="Hembra" selected=publicacion.sexo=="Hembra"?"":null) Hembra
                option(value="Macho" selected=publicacion.sexo=="Macho"?"":null) Macho
            div(class="input_border_focus")
            div(class="input_placeholder") Sexo *
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="edad" id="edad" maxlength=255 value=publicacion.edad pattern="[a-zA-Z0-9ñÑ ]{1,255}" onchange="this.setAttribute('value', this.value);"
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese una edad válida')" placeholder="Solo puede ingresar letras y números")
            div(class="input_border_focus")
            div(class="input_placeholder") Edad 
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="caracteristicas" id="caracteristicas" maxlength=255 value=publicacion.caracteristicas pattern="[a-zA-Z0-9ñÑ ]{1,255}" onchange="this.setAttribute('value', this.value);"
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese un texto de características válido')" placeholder="Solo puede ingresar letras y números")
            div(class="input_border_focus")
            div(class="input_placeholder") Caracteristicas
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="comportamiento" id="comportamiento" maxlength=255 value=publicacion.comportamiento pattern="[a-zA-Z0-9ñÑ ]{1,255}" onchange="this.setAttribute('value', this.value);"
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese un texto de comportamiento válido')" placeholder="Solo puede ingresar letras y números")
            div(class="input_border_focus")
            div(class="input_placeholder") Comportamiento 
            
          input(type="submit" class="btn btn-info" value="Publicar" style="margin: 0 40%;") 
    
        br
        a(href="/reencuentros")
          button(type="button" class="btn btn-info") Cancelar
          
  include ../partials/footer.pug