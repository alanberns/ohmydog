include ../partials/head.pug
div(style="position: relative; min-height: 100vh;")
  div(style="padding-bottom: calc(1.25rem + 0.3125rem * 2 + 1rem)")
    - var selected_nav_link = "turnos";
    include ../partials/header.pug

    div(class="container-fluid")
      h1= message
    
      br
      br
    
      include ../partials/info.pug
    
      br
      br
    
      table(class="table table-striped table-info table-hover")
        thead 
          tr 
            th Perro
            th Pr&aacute;ctica
            th Fecha
            th Franja Horaria
            th Estado
            th Acciones
        tbody 
        if turnos
          each turno in turnos
            tr
              td #{turno.perro.nombre}  
              td #{turno.practica}
              td #{turno.dia.toLocaleString().slice(0,10)}
              if turno.franja == "Temprano"
                td De 08 a 13hs
              else
                td De 15 a 20hs
              td #{turno.estado}
              td
                if turno.estado == "Pendiente" || turno.estado == "Aceptado"
                  a(href="/turno/cancelar/"+turno.id)
                    button(type="button" class="btn btn-warning") Cancelar Turno
                else
                  label() Sin Acciones
        else 
          tr 
            td
            td No se encontraron turnos
            td 
            td
    
  include ../partials/footer.pug