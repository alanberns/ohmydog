include ../partials/head.pug
div(style="position: relative; min-height: 100vh;")
  div(style="padding-bottom: calc(1.25rem + 0.3125rem * 2 + 1rem)")
    - var selected_nav_link = "turnos";
    include ../partials/header.pug

    div(class="container-fluid")
      h1= message
    
      br
      br
    
      include ../partials/info.pug

      br
      br

      form(class="d-flex" role="search" method="post" action="/turno/listarAceptadosAdmin" id="formulario" style="justify-content: center;")
        div(class="left-input input me-2")
          input(type="date" name="dia" id="dia" placeholder="dd/mm/aaaa" required value="" onchange="this.setAttribute('value', this.value);")
          div(class="input_border_focus")
          div(class="input_placeholder") Fecha
        input(class="btn btn-info" type="submit" value="Buscar")
    
      br
      br
    
      table(class="table table-striped table-info table-hover")
        thead 
          tr 
            th Perro
            th Pr&aacute;ctica
            th Fecha
            th Franja Horaria
            th Estado
            th Acciones
        tbody 
        if turnos
          each turno in turnos
            tr
              td #{turno.perro.nombre}  
              td #{turno.practica}
              td #{turno.dia.toLocaleString().slice(0,10)}
              if turno.franja == "Temprano"
                td De 08 a 13hs
              else
                td De 15 a 20hs
              td #{turno.estado}
              td
                a(href="/turno/cargarConsulta/"+turno.id)
                  button(type="button" class="btn btn-info") Cargar Consulta
                a(href="/turno/verDetalle/"+turno.id)
                  button(type="button" class="btn btn-warning") Ver Detalles
        else 
          tr 
            td
            td No se encontraron turnos
            td 
            td
    
  include ../partials/footer.pug