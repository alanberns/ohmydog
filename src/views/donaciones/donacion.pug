include ../partials/head.pug
div(style="position: relative; min-height: 100vh;")
  div(style="padding-bottom: calc(1.25rem + 0.3125rem * 2 + 1rem)")
    include ../partials/header.pug
    div(class="container-fluid")
      //- aca va la pagina hasta footer. inicia con 1 tab
      h1= message
    
      br
      br
    
      include ../partials/info.pug
    
      div(class="")
        form(action="/donaciones/donar/"+donacion.id+"/confirmarDonacion" method="post" class="flex-form-wrap")
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" class="form-control" id="nombre" required disabled value=donacion.nombre)
            input(type="hidden" class="form-control" name="nombre" id="nombre" value=donacion.nombre)
            div(class="input_border_focus")
            div(class="input_placeholder")  Nombre de la campa침a de donaci칩n
          div(class="left-input input mb-3 flex-form-item")
            input(type="number" class="form-control"  id="monto" required disabled value=donacion.monto)
            div(class="input_border_focus")
            div(class="input_placeholder")  Monto a alcanzar
          div(class="left-input input mb-3 flex-form-item")
            input(type="number" class="form-control" name="monto_actual" id="monto_actual" required disabled value=donacion.monto_actual)
            div(class="input_border_focus")
            div(class="input_placeholder")  Monto conseguido
          div(class="left-input input mb-3 flex-form-item")
            input(type="date" class="form-control" name="fecha_fin" id="fecha_fin" required disabled value=donacion.fecha_fin.toISOString().slice(0,10))
            div(class="input_border_focus")
            div(class="input_placeholder")  Fecha de finalizaci칩n
          div(class="left-input input mb-3 flex-form-item")
            input(type="date" class="form-control" name="fecha_inicio" id="fecha_inicio" required disabled value=donacion.fecha_inicio.toISOString().slice(0,10))
            div(class="input_border_focus")
            div(class="input_placeholder")  Fecha de inicio
          div(class="mb-3")
            label(for="id" class="form-label") 
            input(type="hidden" class="form-control" name="id" id="id" value=donacion.id)
          div(class="left-input input mb-3 flex-form-item")
            select(class="form-select" aria-label="Default select example", name="monto_donacion" required)
              option(value="100") 100
              option(value="500") 500
              option(value="1000") 1000
              option(value="2000") 2000
              option(value="4000") 4000
            div(class="input_border_focus")
            div(class="input_placeholder")  Monto a donar *
          input(type="submit" class="btn btn-info" value="Donar" style="margin: 0 40%;")
    
        br
        div(class="container-fluid")
