        label(for="fecha_inicio" class="form-label")
          b Fecha de inicio
        input(type="date" class="form-control" name="fecha_inicio" id="fecha_inicio" required disabled value=donacion.fecha_inicio.toISOString().slice(0,10))
      div(class="mb-3")
        label(for="id" class="form-label") 
        input(type="hidden" class="form-control" name="id" id="id" value=donacion.id)
      div(class="mb-3")
        label(for="monto_donacion" class="form-label")
          b Monto a donar *
        select(class="form-select" aria-label="Default select example", name="monto_donacion" required)
          option(value="100") 100
          option(value="500") 500
          option(value="1000") 1000
          option(value="2000") 2000
          option(value="4000") 4000
      input(type="submit" class="btn btn-info" value="Donar")

