  div(class="")
    form(action="/donaciones/donar/"+donacion.id+"/confirmarDonacion" method="post")
      div(class="mb-3")
        label(for="nombre" class="form-label")
          b Nombre de la campa침a de donaci칩n
        input(type="text" class="form-control" id="nombre" required disabled value=donacion.nombre)
        input(type="hidden" class="form-control" name="nombre" id="nombre" value=donacion.nombre)
      div(class="mb-3")
        label(for="monto" class="form-label")
          b Monto a alcanzar
        input(type="number" class="form-control"  id="monto" required disabled value=donacion.monto)
      div(class="mb-3")
        label(for="monto_actual" class="form-label")
