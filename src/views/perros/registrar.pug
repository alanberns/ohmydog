include ../partials/head.pug
div(style="position: relative; min-height: 100vh;")
  div(style="padding-bottom: calc(1.25rem + 0.3125rem * 2 + 1rem)")
    include ../partials/header.pug
    div(class="container-fluid")
      //- aca va la pagina hasta footer. inicia con 1 tab
      h1= message
    
      br
      br
    
      include ../partials/info.pug
    
      div(class="")
        form(method="post" action="/perros/registrar" id="formulario" class="flex-form-wrap")
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" id="clienteNombre", value=cliente.nombre?cliente.nombre:"" disabled)
            div(class="input_border_focus")
            div(class="input_placeholder") Nombre del dueño
            input(type="hidden" class="form-control" name="clienteNombre" id="clienteNombre", value=cliente.nombre)
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" id="clienteApellido", value=cliente.apellido?cliente.apellido:"" disabled)
            div(class="input_border_focus")
            div(class="input_placeholder") Apellido del dueño
            input(type="hidden" class="form-control" name="clienteApellido" id="clienteApellido", value=cliente.apellido)
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" id="clienteEmail", value=cliente.email?cliente.email:"" disabled)
            div(class="input_border_focus")
            div(class="input_placeholder") Email del dueño
            input(type="hidden" class="form-control" name="clienteEmail" id="clienteEmail", value=cliente.email)
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="nombre" id="nombre" placeholder="Solo puede ingresar letras" maxlength=255, minlength=1, required value=perro.nombre?perro.nombre:""
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese un nombre válido')" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Nombre *
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="raza" id="raza" placeholder="Solo puede ingresar letras" maxlength=255, minlength=1, required value=perro.raza?perro.raza:""
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese una raza válida')" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Raza *
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="color" id="color" placeholder="Solo puede ingresar letras" maxlength=255, minlength=1, required value=perro.color?perro.color:""
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese un color válido')" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Color *
          div(class="left-input input mb-3 flex-form-item")
            input(type="text" name="observaciones" id="observaciones" placeholder="Solo puede ingresar letras" maxlength=255, minlength=1, required value=perro.observaciones?perro.observaciones:""
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('Ingrese un texto de observaciones válido')" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Observaciones *
          div(class="left-input input mb-3 flex-form-item")
            input(type="date" name="fecha_nacimiento" id="fecha_nacimiento", max=hoy required value=perro.fecha_nacimiento?perro.fecha_nacimiento:""
                    oninput="this.setCustomValidity('')", oninvalid="this.setCustomValidity('No puede ingresar fechas futuras')" onchange="this.setAttribute('value', this.value);")
            div(class="input_border_focus")
            div(class="input_placeholder") Fecha de nacimiento *
          div(class="mb-3")
            label(for="clienteId" class="form-label") 
            input(type="hidden" class="form-control" name="clienteId" id="clienteId", value=perro.clienteId)
          input(type="submit" class="btn btn-info" value="Registrar perro" style="margin: 0 40%;") 
    
        br
        a(href="/clientes")
          button(type="button" class="btn btn-info") Cancelar
    
    script(src="/js/validacionRegistroPerro.js") 
  include ../partials/footer.pug