include ../partials/head.pug
include ../partials/header.pug
div(class="container-fluid")
  //- aca va la pagina hasta footer. inicia con 1 tab
  h1= message

  br
  br

  include ../partials/info.pug

  div(class="")
    form(method="post" action="/adopciones/nuevo" id="formulario")
      div(class="mb-3")
        label(for="nombre" class="form-label")
          b Nombre *
        input(type="text" class="form-control" name="nombre" id="nombre", placeholder="Solo puede ingresar letras" minlength=1, maxlenght=255, required value=adopcion.nombre)
      div(class="mb-3")
        label(for="edad" class="form-label")
          b Edad *
        input(type="text" class="form-control" name="edad" id="edad", placeholder="Solo puede ingresar letras y números" minlength=1, maxlenght=255, required value=adopcion.edad)
      div(class="mb-3")
        label(for="raza" class="form-label")
          b Raza *
        input(type="text" class="form-control" name="raza" id="raza", placeholder="Solo puede ingresar letras" minlength=1, maxlenght=255, required value=adopcion.raza)
      div(class="mb-3")
        label(for="color" class="form-label")
          b Color *
        input(type="text" class="form-control" name="color" id="color", placeholder="Solo puede ingresar letras" minlength=1, maxlenght=255, required value=adopcion.color)
      div(class="mb-3")
        label(for="sexo" class="form-label")
          b Sexo *
        select(class="form-select" aria-label="Default select example", name="sexo" required value=adopcion.sexo)
          option(value="Macho") Macho
          option(value="Hembra") Hembra
      div(class="mb-3")
        label(for="origen" class="form-label")
          b Origen *
        input(type="text" class="form-control" name="origen" id="origen", placeholder="Solo puede ingresar letras" minlength=1, maxlenght=255, required value=adopcion.origen)
      div(class="mb-3")
        label(for="observaciones" class="form-label")
          b Observaciones *
        input(type="text" class="form-control" name="observaciones" id="observaciones", placeholder="Solo puede ingresar letras" minlength=1, maxlenght=255, required value=adopcion.observaciones)
      div(class="mb-3")
        label(for="tamanio" class="form-label")
          b Tamaño *
        select(class="form-select" aria-label="Default select example", name="tamanio" required value=adopcion.tamanio)
          option(value="Chico") Chico
          option(value="Grande") Grande
          option(value="Mediano") Mediano
      div(class="mb-3")
        label(for="clienteId" class="form-label")
        input(type="hidden" class="form-control" name="clienteId" id="clienteId" required value=adopcion.clienteId)
    

      input(type="submit" class="btn btn-info" value="Publicar") 

    br
    a(href="/adopciones")
      button(type="button" class="btn btn-info") Cancelar

script(src="/js/validacionNuevaAdopcion.js") 
include ../partials/footer.pug